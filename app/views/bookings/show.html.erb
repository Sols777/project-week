<h1>Booking Request Details</h1>

<p>
  <strong>User:</strong>
  <%= @booking_request.user.first_name %>
  <%= @booking_request.user.last_name %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @booking_request.venue.name %>
</p>

<p>
  <strong>Dates:</strong>
  <%= @booking_request.start_date.to_formatted_s(:long) %> to <%= @booking_request.end_date.to_formatted_s(:long) %>
</p>

<p>
  <strong>Duration:</strong>
  <%= distance_of_time_in_words(@booking_request.start_date, @booking_request.end_date) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @booking_request.status %>
</p>

<% if @booking_request.venue.user == current_user %>
  <%= link_to "Approve Booking", accept_path(@booking_request) %>
  <%= link_to "Reject Booking", reject_path(@booking_request) %>
<% end %>
